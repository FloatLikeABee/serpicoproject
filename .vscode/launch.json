{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Frontend (Chrome)",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:5091",
      "webRoot": "${workspaceFolder}/frontend",
      "sourceMaps": true,
      "sourceMapPathOverrides": {
        "webpack:///src/*": "${webRoot}/src/*",
        "webpack:///./*": "${webRoot}/*",
        "webpack:///./~/*": "${webRoot}/node_modules/*"
      },
      "preLaunchTask": "npm: start (frontend)"
    },
    {
      "name": "Debug Frontend (Edge)",
      "type": "msedge",
      "request": "launch",
      "url": "http://localhost:5091",
      "webRoot": "${workspaceFolder}/frontend",
      "sourceMaps": true,
      "sourceMapPathOverrides": {
        "webpack:///src/*": "${webRoot}/src/*",
        "webpack:///./*": "${webRoot}/*",
        "webpack:///./~/*": "${webRoot}/node_modules/*"
      },
      "preLaunchTask": "npm: start (frontend)"
    },
    {
      "name": "Debug Backend (Go)",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "${workspaceFolder}/backend/main.go",
      "env": {
        "PORT": "5092"
      },
      "args": [],
      "showLog": true,
      "trace": "verbose",
      "cwd": "${workspaceFolder}/backend"
    },
    {
      "name": "Debug Backend (Auto)",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceFolder}/backend/main.go",
      "env": {
        "PORT": "5092"
      },
      "args": [],
      "showLog": true,
      "trace": "log",
      "cwd": "${workspaceFolder}/backend"
    },
    {
      "name": "Attach to Frontend (Chrome)",
      "type": "chrome",
      "request": "attach",
      "port": 9222,
      "url": "http://localhost:5091",
      "webRoot": "${workspaceFolder}/frontend",
      "sourceMaps": true
    }
  ],
  "compounds": [
    {
      "name": "Debug Full Stack",
      "configurations": [
        "Debug Backend (Go)",
        "Debug Frontend (Chrome)"
      ],
      "stopAll": true
    }
  ]
}

